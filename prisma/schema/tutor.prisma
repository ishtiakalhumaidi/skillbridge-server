model Tutor {
  id         String  @id @default(uuid())
  userId     String  @unique
  bio        String?
  hourlyRate Float
  experience Int?
  isFeatured Boolean @default(false)

  subjects     TutorSubject[]
  availability Availability[]
  reviews      Review[]
  bookings     Booking[]

  ratingAvg Float @default(0)

  createdAt DateTime @default(now())
}
