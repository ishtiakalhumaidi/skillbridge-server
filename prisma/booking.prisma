model Booking {
  id String @id @default(uuid())

  studentId  String
  tutorId    String
  categoryId String

  date      DateTime
  startTime DateTime
  endTime   DateTime

  status BookingStatus @default(CONFIRMED)

  student  String
  tutor    String
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  review Review?

  createdAt DateTime @default(now())
}

enum BookingStatus {
  CONFIRMED
  COMPLETED
  CANCELLED
}
