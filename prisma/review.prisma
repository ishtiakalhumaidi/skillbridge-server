model Review {
  id        String @id @default(uuid())

  bookingId String @unique
  studentId String
  tutorId   String

  rating  Int
  comment String?

  booking Booking @relation(fields: [bookingId], references: [id])
  student String
  tutor   Tutor @relation(fields: [tutorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}